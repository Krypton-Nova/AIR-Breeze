{
  "manifest_version": 2,
  "name": "Storm",
  "short_name": "Storm",
  "version": "3.1",
  "author": "Krypton Nova",
  "description": "Storm enables hotkeys for military gameplay on NationStates.",
  "browser_action": {
    "browser_style": false,
    "default_icon": "./ext-resources/icon.png",
    "default_popup": "./popup.html",
    "default_title": "Storm"},
  "permissions": ["activeTab", "*://*.nationstates.net/*", "storage"],
  "background": {"scripts": ["background.js"]},
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*.nationstates.net/*"],
      "run_at": "document_start"
    }, {
      "matches": [
        "https://*.nationstates.net/page=ajax2/a=reports/view=world/filter=move+member+endo",
        "https://*.nationstates.net/template-overall=none/page=reports",
        "https://*.nationstates.net/page=ajax2/a=reports/view=region*"],
      "run_at": "document_start",
      "css": ["ext-resources/no-template.css"]
    }, {
      "matches": ["https://*.nationstates.net/template-overall=none/page=reports"],
      "run_at": "document_start",
      "css": ["ext-resources/no-template-reports.css"]
    }, {
      "matches": ["https://www.nationstates.net/page=ajax2/a=reports/view=world/filter=change"],
      "run_at": "document_start",
      "css": ["ext-resources/no-template-world-changes.css"]
    }
  ]
}
