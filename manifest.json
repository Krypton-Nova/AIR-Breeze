{
	"manifest_version": 2,
    "name": "AIR-Breeze",
	"version": "1.6",
	"author": "Krypton Nova",
	"description": "AIR-Breeze is an add-on for the NationStates website. It is a variant of Breeze++ for AIR-Force and, like Breeze++, makes frequently used actions more convenient by assigning hotkeys to them.",
	"browser_action": {
		"browser_style": false,
		"default_icon": "./ext-resources/icon.png",
		"default_popup": "./popup.html",
		"default_title": "AIR-Breeze"
	},
    "permissions": [ "activeTab", "*://*.nationstates.net/*" ],
    "background": {
    	"scripts": ["background.js"]
    },
    "content_scripts": [ {
		"js": [ "./ext-resources/jquery-3.1.1.min.js", "content.js" ],
		"matches": [ "https://*.nationstates.net/*" ],
		"run_at": "document_start"
    }, {
		"css": [ "./ext-resources/reports-no-template-style.css" ],
		"matches": [ "https://*.nationstates.net/template-overall=none/page=reports" ],
		"run_at": "document_start"
    } ]
}
